<Window x:Class="WpfApp1.editwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="editwindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0">Name:</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPassItem.Name}"></TextBox>
            <Label Grid.Row="1" Grid.Column="0">Start Time:</Label>
            <DatePicker Grid.Row="1" Grid.Column="1"></DatePicker>
            <Label Grid.Row="2" Grid.Column="0">End Time:</Label>
            <DatePicker Grid.Row="2" Grid.Column="1"></DatePicker>

        </Grid>
        <Grid>

        </Grid>
        <Grid>

        </Grid>
        <Grid>

        </Grid>
    </Grid>
</Window>
