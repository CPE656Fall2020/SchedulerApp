<UserControl x:Class="SchedulerGUI.Views.Controls.HistoryGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SchedulerGUI"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid Background="#2D2D30">
        <Label Content="Joules Consumed" Foreground="White" Panel.ZIndex="111111"  HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" Margin="-32,92,0,77" Height="31" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Time in Mins" Foreground="White" Panel.ZIndex="111111"  HorizontalAlignment="Center" Padding="0" VerticalAlignment="Bottom" Height="16" Margin="216,0" />
        <oxy:PlotView  Model="{Binding MyModel}" Foreground="White" Background="#2D2D30" Margin="10,0,0,5" />
    </Grid>
</UserControl>