<Application x:Class="SchedulerGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchedulerGUI"
             StartupUri="Views\MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
                
                <ResourceDictionary Source="Styles\ViewModelTemplates.xaml" />
                <ResourceDictionary Source="Styles\LocalDataTemplates.xaml" />
                <ResourceDictionary Source="Styles\GlobalResources.xaml" />

                <ResourceDictionary Source="Resources\VS2017\Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
