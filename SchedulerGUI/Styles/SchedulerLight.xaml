<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    
    <!--Theme Identity-->
    <sys:Boolean x:Key="IsLightTheme">True</sys:Boolean>
    <sys:Boolean x:Key="IsDarkTheme">False</sys:Boolean>

    <!--Colors-->
    <Color x:Key="RibbonActiveColor">#0078D7</Color> <!--MahApps-->
    
    <!--Brushes-->
    <SolidColorBrush options:Freeze="True" x:Key="RibbonActiveBrush" Color="{DynamicResource RibbonActiveColor}"/>
    
    <!--Make the ribbon look more Office 2016 and less Office 2013 in light theme mode-->
    <!--<SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Content.Background" Color="#F3F3F3" />-->
</ResourceDictionary>
