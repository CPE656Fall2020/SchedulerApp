<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <sys:Boolean x:Key="IsLightTheme">True</sys:Boolean>
    <sys:Boolean x:Key="IsDarkTheme">False</sys:Boolean>

    <Color x:Key="RibbonActiveColor">#0078D7</Color>

    <SolidColorBrush options:Freeze="True" x:Key="RibbonActiveBrush" Color="{DynamicResource RibbonActiveColor}"/>
</ResourceDictionary>
