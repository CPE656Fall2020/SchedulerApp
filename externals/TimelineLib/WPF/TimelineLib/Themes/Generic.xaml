<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TimelineLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:core="clr-namespace:ColorWheel.Core;assembly=ColorWheel.Core"
    mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="/TimelineLibrary;Component/Themes/Constants.xaml" />
        <ResourceDictionary
            Source="/TimelineLibrary;Component/Themes/NavigationButtons.xaml" />
        <ResourceDictionary
            Source="/TimelineLibrary;Component/Themes/ToolboxButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <local:NullToUnsetConverter x:Key="NullToUnsetConverter" />

    <ControlTemplate x:Key="EventTooltipStyle" TargetType="ToolTip">

        <Border
            BorderThickness="1.5"
            CornerRadius="{StaticResource TimelineEventCornerRadius}"
            BorderBrush="{Binding Source={StaticResource TimelineTooltipBorder}, Path=Brush, Mode=OneWay}"
            Background="{Binding Source={StaticResource TimelineTooltipBackground}, Path=Brush, Mode=OneWay}">

            <StackPanel  Margin="5" MaxWidth="400">

                <TextBlock
                    TextWrapping="NoWrap"
                    HorizontalAlignment="Left"
                    MinWidth="{Binding EventPixelWidth}"
                    Text="{Binding Event.Title, Mode=OneWay}"
                    Foreground="{Binding Source={StaticResource TimelineTooltipForeground}, Path=Brush, Mode=OneWay}" />

                <TextBlock
                    TextWrapping="Wrap"
                    FontStyle="italic"
                    FontSize="11"
                    HorizontalAlignment="Left"
                    Text="{Binding Event.Description, Mode=OneWay}"
                    Foreground="{Binding Source={StaticResource TimelineTooltipForeground}, Path=Brush, Mode=OneWay}" />

            </StackPanel>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type local:TimelineBand}">
        <Setter Property="DefaultShortEventTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Rectangle
                            RadiusX="1.5"
                            RadiusY="1.5"
                            MinWidth="4"
                            Width="{Binding EventPixelWidth, Mode=OneWay}"
                            Tag="{Binding Source={StaticResource TimelineEventLine}, Path=Brush, Mode=OneWay}"
                            Fill="{Binding EventColorBrush, Mode=OneWay}"
                            StrokeThickness="0"
                            VerticalAlignment="Top"
                            Height="3">

                            <local:TooltipServiceEx.ToolTipEx>
                                <local:ToolTipEx HideToolTipTimeout="60" />
                            </local:TooltipServiceEx.ToolTipEx>
                            
                            <ToolTipService.ToolTip>
                                <ToolTip Template="{StaticResource EventTooltipStyle}" />
                            </ToolTipService.ToolTip>

                        </Rectangle>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="DefaultEventTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid x:Name="EventTemplateRoot" MinWidth="226">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="20000" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>

                        <Canvas Height="6" Width="6">

                            <Rectangle
                                x:Name="EventDurationRect"
                                Height="6"
                                MinWidth="6"
                                Width="{Binding EventPixelWidth, Mode=OneWay}"
                                Fill="{Binding EventColorBrush, Mode=OneWay}"
                                RadiusX="3"
                                RadiusY="3">

                                <local:TooltipServiceEx.ToolTipEx>
                                    <local:ToolTipEx HideToolTipTimeout="{StaticResource TooltipTimeout}" />
                                </local:TooltipServiceEx.ToolTipEx>

                                <ToolTipService.ToolTip>
                                    <ToolTip Template="{StaticResource EventTooltipStyle}" />
                                </ToolTipService.ToolTip>
                            </Rectangle>
                        </Canvas>

                        <Border
                            Grid.Column="1"
                            Grid.Row="1"
                            Padding="2"
                            Margin="2"
                            CornerRadius="{StaticResource TimelineEventCornerRadius}"
                            BorderThickness="{Binding SelectionBorder, Mode=OneWay}"
                            BorderBrush="{Binding Source={StaticResource TimelineEventBorder}, Path=Brush,  Mode=OneWay}"
                            Background="{Binding Source={StaticResource TimelineEventBackground}, Path=Brush,  Mode=OneWay}" >

                            <StackPanel Orientation="Vertical" Width="220">
                                <StackPanel Margin="2 0 0 0" Orientation="Vertical" Width="Auto">

                                    <TextBlock
                                        x:Name="EventTitleTextBlock"
                                        Text="{Binding Event.Title, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        Foreground="{Binding Source={StaticResource TimelineEventForeground}, Path=Brush, Mode=OneWay}"
                                        Height="Auto"
                                        HorizontalAlignment="Left"
                                        Width="Auto">
                                        
                                        <local:TooltipServiceEx.ToolTipEx>
                                            <local:ToolTipEx HideToolTipTimeout="{StaticResource TooltipTimeout}" />
                                        </local:TooltipServiceEx.ToolTipEx>
                                        <ToolTipService.ToolTip>
                                            <ToolTip Template="{StaticResource EventTooltipStyle}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="EventTeaserBlock"
                                        Text="{Binding Teaser, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        Foreground="{Binding Source={StaticResource TimelineEventForeground}, Path=Brush, Mode=OneWay}"
                                        FontStyle="italic"
                                        Height="Auto"
                                        HorizontalAlignment="Left"
                                        FontSize="9.25">
                                        
                                        <local:TooltipServiceEx.ToolTipEx>
                                            <local:ToolTipEx HideToolTipTimeout="{StaticResource TooltipTimeout}" />
                                        </local:TooltipServiceEx.ToolTipEx>
                                        <ToolTipService.ToolTip>
                                            <ToolTip Template="{StaticResource EventTooltipStyle}" />
                                        </ToolTipService.ToolTip>

                                    </TextBlock>

                                    <local:Hyperlink
                                        x:Name="EventLinkTextBlock"
                                        Visibility="{Binding MoreLinkVisibility, Mode=OneWay}"
                                        Content="{Binding LinkText, Mode=OneWay}"
                                        HorizontalAlignment="Left"
                                        FontStyle="italic"
                                        FontSize="9.25" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border
                            x:Name="BorderLine"
                            Canvas.ZIndex="-1"
                            Grid.RowSpan="3"
                            VerticalAlignment="Stretch"
                            Width="1"
                            Tag="{Binding Source={StaticResource TimelineEventLine}, Path=Brush, Mode=OneWay}"
                            Background="{Binding EventColorBrush, Mode=OneWay}" />

                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="DefaultItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                        <Rectangle Fill="{Binding Source={StaticResource TimelineColumnBackground}, Path=Brush, Mode=OneWay}" />

                        <TextBlock
                            FontFamily="Arial"
                            TextWrapping="Wrap"
                            Margin="5.5,0,2,2"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding Source={StaticResource TimelineColumnForeground}, Path=Brush,  Mode=OneWay}" >

                            <TextBlock.Text>
                                <Binding />
                            </TextBlock.Text>

                        </TextBlock>
                        <Rectangle
                            HorizontalAlignment="Left"
                            Margin="1.25,0,3,0"
                            Width="1"
                            Fill="{Binding Source={StaticResource TimelineColumnBorder}, Path=Brush,  Mode=OneWay}"/>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TimelineBand">

                    <Grid
                        x:Name="MainGrid"
                        HorizontalAlignment="Stretch"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        VerticalAlignment="Stretch">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>

                        <Canvas
                            Margin="-10, 0, -10, 0"                            
                            x:Name="CanvasPart"
                            Grid.Column="1"
                            MinHeight="20"
                            MinWidth="20"
                            Background="{Binding Source={StaticResource TimelineColumnBackground}, Path=Brush, Mode=OneWay}"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">

                            <Canvas.Clip>
                                <RectangleGeometry x:Name="ClipRect" />
                            </Canvas.Clip>

                            <Rectangle
                                StrokeThickness="3"
                                Stroke="Transparent"
                                RadiusX="{StaticResource TimelineVisibleWindowRadius}"
                                RadiusY="{StaticResource TimelineVisibleWindowRadius}"
                                x:Name="VisibleDatesPart"
                                Fill="{Binding Source={StaticResource TimelineVisibleWindowBackground}, Path=Brush, Mode=OneWay}">

                            </Rectangle>
                        </Canvas>

                        <Grid
                            x:Name="NavigateLeft"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <Button
                                Cursor="Hand"
                                x:Name="NavigateLeftButton"
                                Height="20"
                                HorizontalAlignment="Center"
                                Grid.Row="1"
                                Style="{StaticResource NavigateLeftButtonStyle}"
                                VerticalAlignment="Center"
                                Width="9"
                                Content="Button"
                                Grid.Column="1" />
                        </Grid>

                        <Grid
                            x:Name="NavigateRight"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="2"
                            Background="Transparent">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <Button
                                Cursor="Hand"
                                x:Name="NavigateRightButton"
                                Height="20"
                                HorizontalAlignment="Center"
                                Grid.Row="1"
                                Style="{StaticResource NavigateRightButtonStype}"
                                VerticalAlignment="Bottom"
                                Width="9"
                                Grid.Column="1"
                                Content="Button" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:TimelineToolbox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimelineToolbox}">
                    <Border
                        Background="{Binding Source={StaticResource TimelineToolboxBackground}, Path=Brush, Mode=OneWay}"
                        BorderBrush="{Binding Source={StaticResource TimelineToolboxBorder}, Path=Brush, Mode=OneWay}"
                        Height="20"
                        BorderThickness="0 0 0 1">

                        <Grid x:Name="MainGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="1">

                                <Button
                                    x:Name="zoomIn"
                                    FontSize="12"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Arial Black"
                                    Margin="5 2 2 2"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Right"
                                    Content=" + " />
                                <Button
                                    x:Name="zoomOut"
                                    FontSize="12"
                                    FontFamily="Arial Black"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    Margin="5 2 2 2"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Right"
                                    Content=" - " />
                                <Button
                                    x:Name="findFirst"
                                    FontSize="15"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Webdings"
                                    Margin="15 2 2 2"
                                    HorizontalAlignment="Right"
                                    Content="9" />
                                <Button
                                    x:Name="moveLeft"
                                    FontSize="15"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Webdings"
                                    Margin="5 2 2 2"
                                    HorizontalAlignment="Right"
                                    Content="3" />
                                <Button
                                    x:Name="moveRight"
                                    FontSize="15"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Webdings"
                                    Margin="5 2 2 2"
                                    HorizontalAlignment="Right"
                                    Content="4" />
                                <Button
                                    x:Name="findLast"
                                    FontSize="15"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Webdings"
                                    Margin="5 2 2 2"
                                    HorizontalAlignment="Right"
                                    Content=":" />
                                <Button
                                    x:Name="fullScreen"
                                    FontSize="15"
                                    Style="{StaticResource ToolboxButtonStyle}"
                                    FontFamily="Webdings"
                                    Margin="5 2 2 2"
                                    HorizontalAlignment="Right"
                                    Content="1" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
